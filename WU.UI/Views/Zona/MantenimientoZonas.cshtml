@model IEnumerable<WU.BE.ZonaBE>
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "Mantenimiento de Zonas";
}

<script type="text/javascript">
    $(function () {
        $('#finicio').datetimepicker({ format: 'DD/MM/YYYY' });
        $('#ffin').datetimepicker({ format: 'DD/MM/YYYY' });
    });
</script>

<h3>Mantenimiento de Zonas</h3>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Datos</h3>
        </div>
        <div class="panel-body" style="padding: 0">
            <br>
            <div class="row">
                @using (Html.BeginForm("MantenimientoZonas", "Zona", FormMethod.Post))
                {
                    <div class="col-md-5">
                        <div class="col-md-12 col-sm-6">
                            <div class="form-group row">
                                <label for ="finicio" class="col-sm-4 coc-form-label esp-s">Fecha Inicio:</label>
                                <div class="col-sm-8">
                                    <div class="input-group date" id="finicio">
                                        <input type="text" id="txtFchIni" name="txtFchIni" class="form-control ocl-8" value="@DateTime.Now.AddDays(1-DateTime.Now.Day).ToString("dd/MM/yyyy")">
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-6">
                            <div class="form-group row">
                                <label for="ffin" class="col-sm-4 col-form-label esp-s">Fecha Fin:</label>
                                <div class="col-sm-8">
                                    <div class="input-group date" id="ffin">
                                        <input type="text" id="txtFchFin" name="txtFchFin" class="form-control ocl-8" value="@DateTime.Now.AddDays(1).ToString("dd/MM/yyyy")">
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-calendar"></span>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7">
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label for="finicio" class="col-md-2 col-sm-2 col-form-label">Nombre:</label>
                                <div class="col-md-7 col-sm-7">
                                    <input type="text" class="form-control ocl-8" id="txtNombre" name="txtNombre">
                                </div>
                                <div class="col-sm-3">
                                    <a href="@Url.Action("NuevaZona", "Zona")" class="btn btn-success btn-block">
                                        <span class="glyphicon glyphicon-plus"></span>
                                        Nuevo
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group row">
                                <label for="finicio" class="col-md-2 col-sm-2 col-form-label">Estado:</label>
                                <div class="col-md-7 col-sm-7">
                                    <select id="ddlEstado" name="ddlEstado" class="form-control">
                                        <option id="%" value="%">TODOS</option>
                                        <option id="1" value="0" selected>ACTIVOS</option>
                                        <option id="X" value="X">INACTIVOS</option>
                                    </select>
                                </div>
                                <div class="col-sm-3">
                                    <input type="submit" value="Buscar" id="btnBuscar"
                                           class="btn btn-primary btn-block esp-s" name="btnBuscar" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- fin panel -->
</div>
<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Lista</h3>
        </div>
        <div class="panel-body">
            <script type="text/javascript">
                $(document).ready(function () {
                    $('#tbZonas').DataTable({});
                });
            </script>
            <div class="col-sm-12">
                <table id="tbZonas" class="table table-bordered table-hover table-striped" style="overflow-y:scroll; max-height:400px">
                    <thead>
                        <tr>
                            <th>N°</th>
                            <th>Cod. Ubigeo</th>
                            <th>Dsc. Ubigeo</th>
                            <th>Nombre</th>
                            <th>Fch. Registro</th>
                            <th>Estado</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(zona => item.codzona)
                                </td>
                                <td>
                                    @Html.DisplayFor(zona => item.codubigeo)
                                </td>
                                <td>
                                    @Html.DisplayFor(zona => item.dscubigeo)
                                </td>
                                <td>
                                    @Html.DisplayFor(zona => item.dsczona)
                                </td>
                                <td>
                                    @Html.DisplayFor(zona => item.fchregistro)
                                </td>
                                <td>
                                    @{
                                        string tp = "";
                                        string estado = "";
                                        switch (item.estzona)
                                        {
                                            case "0": tp = "success"; estado = "ACTIVO"; break;
                                            case "X": tp = "danger"; estado = "INACTIVO"; break;
                                            default: tp = "primary"; estado = "ACTIVO"; break;
                                        }
                                        <span class="label label-@tp">@estado</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("DetalleZona", "Zona", new { zona = item.codzona })"
                                       class="btn btn-primary btn-sm" style="width: 32px">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </a>
                                </td>
                            </tr>

                                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>